<!-- a simple test for dhtml behaviors support -->

<public:component xmlns:public="urn:HTMLComponent" lightweight="true">
<script type="text/javascript">
//<![CDATA[
var MOZ_INFO = "But it requires <a href=\"http://dean.edwards.name/moz-behaviors/\">moz-behaviors</a> to enable them.";
function success() {
	innerHTML = "Your browser supports DHTML Behaviors.";
	style.fontWeight = "bold";
	if (currentStyle.MozBinding) {
		var mozInfo = ownerDocument.createElement("p");
		mozInfo.innerHTML = MOZ_INFO;
		parentNode.appendChild(mozInfo);
	}
};
try {
	success();
	// just in case
} catch (error) {
	// try again
	window.attachEvent("onload", success);
}
//]]>
</script>
</public:component>
